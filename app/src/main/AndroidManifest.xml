<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.smartmarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/batmanold"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/batmanold"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home" />
        <activity android:name=".shop" />
        <activity android:name=".Stationary" />
        <activity android:name=".Medical" />
        <activity android:name=".Footwear" />
        <activity android:name=".Display" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".Profile" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ForgotPassword"></activity>
    </application>

</manifest>